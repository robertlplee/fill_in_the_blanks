<h1>List of Posts</h1>

<table>
	<tr>
		<th>Bru Name</th>
		<th>Tite</th>
		<th>Body</th>
		<th colspan="3"></th>
	</tr>

	<% @posts.each do |post| %>
	<tr>
		<td><%= link_to post.bru_name, post_path(post) %></td>
		<td><%= post.title %></td>
		<td><%= post.body %></td>

		<td><%= link_to 'Show', post_path(post) %></td>
		<td><%= link_to 'Edit', edit_post_path(post) %></td>
		<td><%= link_to 'Destroy', post_path(post),
			method: :delete, #tells rails to link to execute animals_controller
			data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>

</br>

<%= link_to "New Animal", new_post_path %>
